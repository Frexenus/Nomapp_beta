<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rel">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avlRcpImageView"
                android:src="@drawable/tetet"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/avlRcpNameTV"
                android:gravity="left"
                android:textSize="35dp"
                android:text="Roast beef"
                android:visibility="visible"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="21dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/numOfIngs"
                android:textSize="55dp"
                android:fontFamily="sans-serif-thin"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="false"
                android:textColor="#434343" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PRODUCTS"
                android:id="@+id/text_prod"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_alignTop="@+id/text_steps"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="#434343" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MIN."
                android:id="@+id/text_time"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_alignTop="@+id/text_prod"
                android:layout_alignEnd="@+id/time"
                android:textSize="15dp"
                android:textColor="#434343" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PREVIEW"
                android:id="@+id/preview"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"

                android:textSize="14dp"
                android:textColor="@color/primaryDark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="SHARE"
                android:id="@+id/share"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"

                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/preview"
                android:layout_alignStart="@+id/time"
                android:layout_marginRight="25dp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/steps"
                android:textSize="55dp"
                android:fontFamily="sans-serif-thin"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="40dp"
                android:layout_alignParentStart="false"
                android:textColor="#434343" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="STEPS"
                android:id="@+id/text_steps"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/steps"
                android:textColor="#434343" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/time"
                android:textSize="55dp"
                android:fontFamily="sans-serif-thin"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentStart="false"
                android:textColor="#434343" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:id="@+id/view"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>